<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.present? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.photo) %>)">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2025&q=80)">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= link_to('Create a cocktail 🍸', new_cocktail_path, { class: "btn-fancy" }) %>
  </div>
</div>
