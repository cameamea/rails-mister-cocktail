<h2><%= @cocktail.name %></h2>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <p><%= dose.ingredient.name %></p>
      <p><%= dose.description %></p>
      <p><%= link_to "Delete a dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure bro?"} %></p>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to cocktails list", cocktails_path %>

